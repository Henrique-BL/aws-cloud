# VPC Configuration
vpc_name           = "my-rds-vpc"
vpc_cidr_block     = "10.0.0.0/16"
availability_zones = ["sa-east-1a", "sa-east-1c"]

# RDS Configuration
db_identifier               = "my-postgres-db"
db_name                    = "myapp"
db_username                = "postgres"
db_password                = "your-secure-password-here"  # Change this!
db_instance_class          = "db.t3.micro"
db_allocated_storage       = 20
db_max_allocated_storage   = 100
db_engine_version          = "16.4"
db_backup_retention_period = 7
db_backup_window          = "03:00-04:00"
db_maintenance_window     = "sun:04:00-sun:05:00"
db_deletion_protection    = false
db_skip_final_snapshot    = true

# EC2 Configuration
ec2_instance_type        = "t3.micro"
ec2_key_name            = "my-key-pair"  # Your AWS key pair name
ec2_allowed_cidr_blocks = ["0.0.0.0/0"] # Restrict this to your IP for security

# Tags
tags = {
  Environment = "development"
  Project     = "my-rds-project"
  Owner       = "your-name"
  Terraform   = "true"
}
